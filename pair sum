public class Solution {  

    public static int pairSum(int arr[], int x) {
    	//Your code goes here
        int pair = 0 ;
        int n = arr.length ; 
        for(int i = 0 ; i < n ; i++){
            for(int j = i + 1 ; j < n ; j++){
                if(arr[i] + arr[j] == x){
                    pair = pair + 1;
                }
            }
        }
        return pair;
    }
}
